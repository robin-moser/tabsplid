# Editorconfig - Robin Moser
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
tab_width = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*{.tsx,.ts,.js,.html}]
indent_size = 2

[*{.css}]
indent_size = 4
